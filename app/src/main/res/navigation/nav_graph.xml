<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_repositoryFragment"
            app:destination="@id/repositoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/repositoryFragment"
        android:name="RepositoriesFragment"
        android:label="RepositoryFragment">
        <action
            android:id="@+id/action_repositoryFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="SearchFragment"
        android:label="SearchFragment" />

    <fragment
        android:id="@+id/repositoryDetailsFragment"
        android:name="com.example.emerchantpay.repository.presentation.view.RepositoryDetailsFragment"
        android:label="RepositoryDetailsFragment" />

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.emerchantpay.repository.presentation.view.UserListFragment"
        android:label="UserListFragment" />

</navigation>